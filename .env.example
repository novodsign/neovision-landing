# NeoVision Backend Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:5173

# Qtickets API Configuration
QTICKETS_API_URL=https://qtickets.ru/api/rest/v1
QTICKETS_API_KEY=your_api_key_here

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/neovision

# Redis (for caching and job queue)
REDIS_URL=redis://localhost:6379

# JWT Secret (for admin authentication)
JWT_SECRET=your_jwt_secret_here

# Cloudinary (for image uploads - optional)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Email (for contact form)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
CONTACT_EMAIL=contact@neovision.ru
